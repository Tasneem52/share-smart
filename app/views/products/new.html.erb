<h2> New Product Form Page </h2>

<%= form_for [@group, @product] do |f| %>

  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>

  <%= f.label :image, "Image" %>
  <%= f.file_field :image %>

  <%= f.label :description, "Description" %>
  <%= f.text_field :description %>

  <%= f.label :purchase_date, "Purchase Date" %>
  <%= f.text_field :purchase_date %>

  <%= f.label :expiration_date, "Expiration date" %>
  <%= f.text_field :expiration_date %>

  <%= f.submit "Add Product" %>

<%end%>
